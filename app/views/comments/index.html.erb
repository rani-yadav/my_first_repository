<h2>comments</h2>
<table>
	<thead>
		<tr>
			<th> User_email </th>	
			<th> Body </th>	
		</tr>
	</thead>
	<tbody>
		<% @comments.each do |comment|%>
		<tr>
			<td><%= comment.user.email%></td>
			<td><%= comment.body%></td>
			<td><%= link_to 'edit', edit_answer_comment_path(@commentable, comment)%></td>
			<td><%= link_to 'destroy', answer_comment_path(@commentable, comment),method: :delete, data: { confirm: 'Are you sure?'}%></td>
		</tr>
		<%end %>
	</tbody>
</table>
<%= link_to 'back', :back%>
