<!DOCTYPE html>
<html>
  <head>
    <title>ExQuestionAnswers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application'%>
  
  </head>
  <body>


<body>
  <header class="header-section">
    <% if user_signed_in?%>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand" href="index.html"><h2>24x7 softwares.com <em></em></h2></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
               
             
              <li class="nav-item">
               <%= link_to 'Home', root_path%> |
              </li>
           
              <li class="nav-item">
               <%= link_to 'show question', user_questions_path(current_user, @article)%> |
              </li>

              <li class="nav-item">
               <%= link_to 'create question', new_user_question_path(current_user)%> |
              </li>

              <li class="nav-item">
                <%= link_to 'update profile', edit_user_registration_path%> |
              </li>

              <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path, method: :delete%> |
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% else %>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand" href="index.html"><h2>24x7 softwares.com <em></em></h2></a>
          
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item active"><%= link_to 'login', new_user_session_path%> |
              </li>

               <li class="nav-item active"><%= link_to 'sign up', new_user_registration_path%>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>
  </header>

  <div class= "container pt-5">
    <div class= "container pt-5">
      <div class="container">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>  
    </div>
  </div>


    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="inner-content">
              <p>Copyright &copy; 2020 24x7 softwares.com.
              </p>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
